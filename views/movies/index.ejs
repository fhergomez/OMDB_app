<div class="col-sm-6 col-md-6 col-lg-6 col-lg-offset-3">
  <h1>My home page</h1>
  <% if(currentUser) { %>
    Hello, <b><%= typeof currentUser.name === 'string' ? currentUser.name : 'Unknown' %></b>.
    <form action='/movies' method='get' role="search">
    <div class="form-group">
      <input type="text" class="form-control" name='q' placeholder="Search">
    </div>
    <button type="submit" class="btn btn-default">Go search for movies</button>
  </form>
    <a href="/auth/logout" class="btn btn-primary">Logout</a>
  <% }else{ %>
    <a href="/auth/login" class="btn btn-primary">Login</a>
    <a href="/auth/signup" class="btn btn-primary">Signup</a>
  <% } %>
  <br><br>
  <h1 class="white-text">Welcome to OMDB Movie Database!</h1>

</div>